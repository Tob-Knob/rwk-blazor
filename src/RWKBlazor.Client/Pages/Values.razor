@page "/values"
@rendermode InteractiveWebAssembly

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<h3>Values</h3>

@if (_values == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var value in _values)
            {
                <tr>
                    <td>@value</td>
                </tr>
            }
        </tbody>
    </table>
}
